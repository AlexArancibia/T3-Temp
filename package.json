{
  "name": "bun-rsbuild",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "bun run validate:types && next build",
    "build:docker": "bun run type-check && next build",
    "start": "next start",
    "verify": "bun run type-check && bun run lint && bun run format",
    "pre-commit": "bun run type-check",
    "type-check": "tsc --project tsconfig.typecheck.json",
    "type-check:strict": "tsc --project tsconfig.typecheck.json --noEmit --strict",
    "validate": "bun run type-check:strict && bun run lint && echo '✅ All validations passed!'",
    "validate:types": "bun run type-check:strict && echo '✅ TypeScript validation passed!'",
    "validate:full": "./scripts/validate.sh",
    "fix": "bun run lint:fix && bun run format:fix",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "prepare": "husky",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "bun run scripts/seed.ts",
    "sitemap": "next-sitemap --config ./config/next/next-sitemap.config.js",
    "commitlint": "commitlint --edit",
    "commit": "cz"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "biome check --write"
    ],
    "src/**/*.{js,jsx}": [
      "biome check --write"
    ],
    "*.{json,css,md}": "biome check --write"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@tanstack/react-query": "^5.87.1",
    "@trpc/client": "^11.5.0",
    "@trpc/next": "^11.5.0",
    "@trpc/react-query": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "i18next": "^25.4.1",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.5",
    "lucide-react": "^0.525.0",
    "motion": "^12.23.12",
    "next": "^15.5.0",
    "next-i18next": "^15.4.2",
    "next-seo": "^6.8.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.5",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-day-picker": "^9.11.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-i18next": "^15.7.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "valibot": "^1.1.0",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/bun": "^1.2.20",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "knip": "^5.63.0",
    "prisma": "^6.15.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
