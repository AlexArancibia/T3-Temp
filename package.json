{
  "name": "bun-rsbuild",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "verify": "bun run lint && bun run format",
    "fix": "bun run lint:fix && bun run format:fix",
    "lint": "biome check --config-path ./config/lint/biome.json .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "prepare": "husky",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "sitemap": "next-sitemap --config ./config/next/next-sitemap.config.js",
    "commitlint": "commitlint --edit",
    "commit": "cz"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": "biome check --write",
    "*.{json,css}": "biome check --write"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.85.5",
    "better-auth": "^1.3.7",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.4.1",
    "lint-staged": "^16.1.5",
    "lucide-react": "^0.525.0",
    "motion": "^12.23.12",
    "next": "^15.5.0",
    "next-i18next": "^15.4.2",
    "next-seo": "^6.8.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/bun": "^1.2.20",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "knip": "^5.63.0",
    "prisma": "^6.14.0",
    "typescript": "^5.9.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
