# -----------------------------------------------------------------------------
# This Dockerfile is specifically configured for projects using Bun
# -----------------------------------------------------------------------------

# Use Bun's official image
FROM oven/bun:1 AS base

WORKDIR /app

# Install dependencies with bun
FROM base AS deps
COPY package.json bun.lock* ./
RUN bun install --no-save --frozen-lockfile

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app

# Accept build arguments
ARG DATABASE_URL
ARG BETTER_AUTH_SECRET
ARG JWT_SECRET
ARG NEXTAUTH_URL
ARG NEXT_PUBLIC_API_URL
ARG GOOGLE_CLIENT_ID
ARG GOOGLE_CLIENT_SECRET
ARG NODEMAILER_USER
ARG NODEMAILER_PASSWORD
ARG NODEMAILER_SMTP
ARG NODEMAILER_PORT

# Set environment variables from build args
ENV DATABASE_URL=$DATABASE_URL
ENV BETTER_AUTH_SECRET=$BETTER_AUTH_SECRET
ENV JWT_SECRET=$JWT_SECRET
ENV NEXTAUTH_URL=$NEXTAUTH_URL
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV GOOGLE_CLIENT_ID=$GOOGLE_CLIENT_ID
ENV GOOGLE_CLIENT_SECRET=$GOOGLE_CLIENT_SECRET
ENV NODEMAILER_USER=$NODEMAILER_USER
ENV NODEMAILER_PASSWORD=$NODEMAILER_PASSWORD
ENV NODEMAILER_SMTP=$NODEMAILER_SMTP
ENV NODEMAILER_PORT=$NODEMAILER_PORT

COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Ensure public directory exists
RUN mkdir -p ./public

# Generate Prisma client
RUN bunx prisma generate

# Next.js collects completely anonymous telemetry data about general usage.
# Uncomment the following line in case you want to disable telemetry during the build.
ENV NEXT_TELEMETRY_DISABLED=1

# Skip environment validation during build
ENV SKIP_ENV_VALIDATION=true

RUN bun run build:docker

# Production image, copy all the files and run next
FROM base AS runner
WORKDIR /app

# Uncomment the following line in case you want to disable telemetry during runtime.
ENV NEXT_TELEMETRY_DISABLED=1

ENV NODE_ENV=production \
    PORT=3000 \
    HOSTNAME="0.0.0.0"

RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

COPY --from=builder /app/public ./public

# Automatically leverage output traces to reduce image size
# https://nextjs.org/docs/advanced-features/output-file-tracing
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Copy Prisma files and generated client for database functionality
COPY --from=builder --chown=nextjs:nodejs /app/prisma ./prisma
COPY --from=builder --chown=nextjs:nodejs /app/node_modules/.prisma ./node_modules/.prisma
COPY --from=builder --chown=nextjs:nodejs /app/node_modules/@prisma ./node_modules/@prisma

USER nextjs

EXPOSE 3000

# Health check removed - not needed for Coolify deployment

# Create entrypoint script for database migrations
COPY --chown=nextjs:nodejs <<EOF /app/entrypoint.sh
#!/bin/sh
set -e

echo "🚀 Starting Feniz Trading Platform..."

# Run database migrations if DATABASE_URL is set
if [ -n "\$DATABASE_URL" ]; then
    echo "🔄 Running database migrations..."
    bunx prisma migrate deploy || echo "⚠️  Migration failed, but continuing..."
    bunx prisma generate || echo "⚠️  Prisma generate failed, but continuing..."
fi

echo "✅ Starting the application..."
exec bun ./server.js
EOF

RUN chmod +x /app/entrypoint.sh

CMD ["/app/entrypoint.sh"]
